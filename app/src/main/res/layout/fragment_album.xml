<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8"
    tools:context="com.sdsmdg.harjot.MusicDNA.LocalMusicFragments.AlbumFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/albums_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomAlbumMargin"
        android:padding="10dp"></android.support.v7.widget.RecyclerView>

    <FrameLayout
        android:id="@+id/bottomAlbumMargin"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"></FrameLayout>

</RelativeLayout>
