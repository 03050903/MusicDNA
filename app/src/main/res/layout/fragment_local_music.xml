<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEE"
    android:padding="5dp"
    tools:context="com.sdsmdg.harjot.MusicDNA.LocalMusicFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/localMusicList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomMarginLocal"
        android:background="#FFF"></android.support.v7.widget.RecyclerView>

    <FrameLayout
        android:id="@+id/bottomMarginLocal"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"></FrameLayout>

</RelativeLayout>
